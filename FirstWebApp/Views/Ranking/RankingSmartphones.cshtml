@model List<FirstWebApp.ViewModels.SmartphoneViewModel>
<h1>Top 10 Smartphones</h1>

@foreach (var item in @Model)
{
    <a asp-controller="Smartphone" asp-action="ById" asp-route-id="@item.Id">
        <h3>@item.RankingPositionPremiumSmartphone @item.Name</h3>
        @if (item.image != null)
        {
            <img src="@item.image.Path" alt="Alternate Text" />
        }
    </a>
    <hr />
}
<br />
